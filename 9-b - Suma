using System;      //Използвай класовете дефинирани в пространството System

namespace _1_Suma  //Дефинираме собствено именно пространство
{
    class Program  //Клас, в който ще пишем програмата
    {
        static void Main(string[] args)  // Главен метод, който съдържа главната програма
        {                                // Тук пишем нашата програма - сума на две числа
            var a = 5;
            var b = 10;
            var suma = a + b;
            Console.WriteLine(suma);     // Отпечатва сумата на екрана
        }
    }
}
